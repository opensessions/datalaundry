@model DataLaundryApp.ViewModels.vmLogin
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="ibox-content gray-bg">
    <h2 class="font-bold">Admin Login</h2>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "m-t", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

        <div class="form-group">
            @Html.TextBoxFor(x => x.Email, new { type = "email", @class = "form-control", placeholder = "user@email.com" })
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "**********" })
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
        </div>

        <div>
            <input type="submit" class="btn btn-primary block full-width m-b" value="LOGIN" />
        </div>

        @*<a href="@Url.Action("ForgotPassword", "Account")">Forgot password?</a>*@
    }
</div>